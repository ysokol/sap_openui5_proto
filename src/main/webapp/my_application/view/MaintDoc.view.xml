<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:m="sap.m"
          xmlns:f="sap.ui.layout.form" controllerName="ys.first.app.controller.MaintDoc" height="100%">
    <ObjectPageLayout id="objectPageLayoutId" alwaysShowContentHeader="true">
        <headerTitle>
            <ObjectPageHeader id="headerForTest" headerDesign="Light" objectTitle="Denise Smith"
                              objectSubtitle="Example of a ObjectPage with Header Content always shown on desktop" objectImageShape="Circle"
                              objectImageURI="./test-resources/sap/uxap/images/imageID_275314.png">
                <actions>
                    <ObjectPageHeaderActionButton icon="sap-icon://action" text="action"/>
                    <ObjectPageHeaderActionButton icon="sap-icon://action-settings" text="settings"/>
                    <ObjectPageHeaderActionButton icon="sap-icon://edit" text="edit"/>
                    <ObjectPageHeaderActionButton icon="sap-icon://save" text="save" visible="false"/>
                    <ObjectPageHeaderActionButton icon="sap-icon://refresh" text="{buttons>/text}"/>
                </actions>
            </ObjectPageHeader>
        </headerTitle>
        <headerContent>
            <f:Form maxContainerCols="2">
                <f:title>
                    <core:Title text="Address"/>
                </f:title>
                <f:layout>
                    <f:ResponsiveGridLayout labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1"/>
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="Maintenance Document">
                            <f:fields>
                                <m:Input value="{MaintenanceDoc}" id="name"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Text">
                            <f:fields>
                                <m:Input value="{Text}" />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </headerContent>
        <sections>
            <ObjectPageSection title="Operations">
                <ObjectPageSubSection title="List of operations">
                    <blocks>
                        <m:Table id="docLinesTableId" items="{path: 'MaintenanceDocLineDetails'}" inset="false" width="auto" growing="true">
                            <m:headerToolbar>
                                <m:Toolbar>
                                    <m:Button id="addButton" text="Add Line" press="onAddLine"/>
                                </m:Toolbar>
                            </m:headerToolbar>
                            <m:columns>
                                <m:Column width="5em">
                                    <m:Text text="Line"/>
                                </m:Column>
                                <m:Column width="5em">
                                    <m:Text text="Mileage"/>
                                </m:Column>
                            </m:columns>
                            <m:items>
                                <m:ColumnListItem vAlign="Middle" id="ColumnListItemId" type="Detail" detailPress="onNavigation">
                                    <m:cells>
                                        <m:Label text="{MaintenanceDocLine}"/>
                                    </m:cells>
                                    <m:cells>
                                        <m:Input value="{MaintenanceMileage}"/>
                                    </m:cells>
                                </m:ColumnListItem>
                            </m:items>
                        </m:Table>
                    </blocks>
                </ObjectPageSubSection>
            </ObjectPageSection>
            <ObjectPageSection title="Materials">
                <ObjectPageSubSection title="List of materials">
                    <blocks>
                        <m:ObjectStatus title="User ID" text="12345678"/>
                    </blocks>
                </ObjectPageSubSection>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>